<div class="container-wrap">
  <div class="head">
    <div class="category-title">
      <h1>Start by selecting<br> a topic</h1>
      <h4>To create a ticket or support other developers,<br> first select a programming language below</h4>
    </div>
    <div class="category-svg"><%= image_tag "category.svg" %>
    </div>
  </div>

  <div class="category-section">
    <div class="tab">
      <button class="tablinks active" onclick="openTab(event, 'Languages')">
        <h4 class='subheadline-wrapper'>Languages
          <div class="subheadline-line"></div>
        </h4>
      </button>
      <button class="tablinks" onclick="openTab(event, 'Frameworks')">
        <h4 class='subheadline-wrapper'>Frameworks
          <div class="subheadline-line"></div>
        </h4>
      </button>
      <button class="tablinks" onclick="openTab(event, 'Other')">
        <h4 class='subheadline-wrapper'>Other
          <div class="subheadline-line"></div>
        </h4>
      </button>
    </div>

    <div id="Languages" class="tabcontent" style="display: block">
      <div class="container-wrap">
        <div class="container-wrap languages">
          <a href="/categories "></a>
          <div class="cards-category">
           <% @categories.each do |category| %>
           <%= link_to filtered_category_tickets_path(category[:id]) do %>
           <div class="card-category" data-colour= '<%= category.colour %>'>
              <div id="dot-and-language">
                <div class="colour-circle" style='background-color: <%= category.colour %>'></div>
                <p class="link-to-tickets"> <%= category.name%></p>
             </div>
           </div>
           <% end %>
           <% end %>
         </div>
       </div>
     </div>
   </div>

   <div id="Frameworks" class="tabcontent">
    <div class="container-wrap">
      <div class="container-wrap languages">
        <a href="/categories "></a>
        <div class="cards-category">
          <h3 style='color: white'>Coming soon</h3>
        </div>
      </div>
    </div>
  </div>

  <div id="Other" class="tabcontent">
    <div class="container-wrap">
      <div class="container-wrap languages">
        <a href="/categories "></a>
        <div class="cards-category">
         <h3 style='color: white'>Coming soon</h3>
       </div>
     </div>
   </div>
 </div>
</div>
</div>


<script>
  function openTab(evt, tabName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(tabName).style.display = "block";
    evt.currentTarget.className += " active";
  }
</script>



